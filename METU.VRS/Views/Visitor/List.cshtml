@model PagedList.IPagedList<METU.VRS.Models.Visitor>
@using PagedList.Mvc;
@using METU.VRS.UI
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "My Visitors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>@ViewBag.Title</h4>
@if (Request.Params["success"] != null && Request.UrlReferrer?.Host == Request.Url.Host)
{
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <i class="fa fa-check"></i>Your visitor is saved and approved successfully
    </div>
}

@using (Html.BeginForm("List", "Visitor", FormMethod.Get))
{
    <div class="row">
        <div class="col-sm-7  col-xs-12 col-xs-offset-0">
            <a href="@Url.Action("Apply", "Visitor")" class="btn btn-primary">Register New Visitor&nbsp;<i class="fa fa-ticket"></i></a>
        </div>
        <div class="col-sm-1 col-xs-12">
            &nbsp;
        </div>
        <div class="col-sm-4  col-xs-12 col-xs-offset-0">
            <div class="input-group">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @placeholder = "Quick Search", @class = "form-control no-limit" })
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search fa-fw"></i></button>
                </span>
            </div>
        </div>
        <div class="col-xs-12">
            &nbsp;
        </div>
    </div>
}
@if (Model.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        <i class="fa fa-exclamation-triangle"></i>
        No result found, you could register a new visitor with the button above.
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.ActionLink("Visitor Name", "List", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Plate Number", "List", new { sortOrder = ViewBag.PlateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Visit Date", "List", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                Last Modified
            </th>
            <th style="width:30px;"></th>
            <th style="width:30px;"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    #@Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.PlateNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisitDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    <a href="@Url.Action("Detail", "Visitor", new { UID = item.UID, inline = 1 })" data-toggle="modal" data-target="#details" class="btn btn-primary">Detail&nbsp;<i class="fa fa-file-text-o"></i></a>
                </td>
                <td>
                    @if (item.Status == METU.VRS.Models.VisitorStatus.WaitingForApproval)
                    {
                        <div class="dropdown">
                            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                Action <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                                <li><a href="@Url.Action("Approve", "Visitor", new { Id = item.ID })"><i class="fa fa-check-circle-o"></i> Approve Visitor</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="@Url.Action("Reject", "Visitor", new { Id = item.ID })"><i class="fa fa-close"></i> Reject Visitor</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <button class="btn btn-default disabled" type="button" role="button" data-toggle="popover" data-trigger="hover" title="@item.Status.ToDescription()" data-placement="bottom" data-content="There is no available action for this visitor">
                            Action <span class="caret"></span>
                        </button>
                    }
                </td>
            </tr>
        }

    </table>
    <br />
    <div class="col-md-12 text-right">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("List",
            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
}


<!-- Modal -->
<div class="modal fade" id="details" tabindex="-1" role="dialog">
    <div class="modal-dialog" style="width:90%!important" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('#details').on('shown.bs.modal', function () {
            $(this).scrollTop(0);
        });

        $('#details').on('hide.bs.modal', function () {
            $('#details').removeData('bs.modal');
        });

        $(function () {
            $('[data-toggle="popover"]').popover()
        })
    </script>
}